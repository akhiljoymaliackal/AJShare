<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/enteryourname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="Enter your Name :" />

    <EditText
        android:id="@+id/resultenteryourname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/draw_border"
        android:ems="10"
        android:textColor="@color/blacktextcolor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPersonName"
        android:hint="Type here"
        />

    <Button
        android:id="@+id/buttonenteryourname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_style"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/butontextcolor" />
</LinearLayout>
